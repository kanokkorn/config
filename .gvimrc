" setting for windows

syntax on
colorscheme evening 
hi StatusLine ctermbg=lightgreen ctermfg=DarkGray
hi StatusLineNC ctermbg=lightred ctermfg=DarkGray

" uncomment if Cascadia_Code installed
" set guifont=Cascadia_Code:h16:cANSI:qDRAFT

set guifont=Consolas:h16
set fillchars+=vert:¦
set number
set linebreak 
set expandtab
set showmatch
set smartindent
set smarttab
set visualbell   
set hlsearch   
set ignorecase    
set autoindent
set cindent
set expandtab
set tabstop=2
set shiftwidth=2
set ruler        
set undolevels=1000     
set backspace=indent,eol,start                
